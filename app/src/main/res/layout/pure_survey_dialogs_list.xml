<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.stfalcon.chatkit.dialogs.DialogsList
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dialogDateColor="@color/inbox_message"
        app:dialogDateSize="@dimen/text_size_12"
        app:dialogDividerLeftPadding="0dp"
        app:dialogItemBackground="@color/inbox_unread_date"
        app:dialogMessageTextColor="@color/inbox_message"
        app:dialogMessageTextSize="@dimen/text_size_14"
        app:dialogTitleTextColor="@color/inbox_title"
        app:dialogTitleTextSize="@dimen/text_size_14"
        app:dialogUnreadDateColor="@color/inbox_unread_date"
        app:dialogUnreadItemBackground="@color/white"
        app:dialogUnreadMessageTextColor="@color/inbox_message"
        app:dialogUnreadTitleTextColor="@color/inbox_title"
        app:dialogUnreadTitleTextStyle="bold" />

</layout>